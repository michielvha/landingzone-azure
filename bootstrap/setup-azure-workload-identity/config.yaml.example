# Azure Workload Identity Setup Configuration
# Copy this file to config.yaml and fill in your values

terraform_cloud:
  organization: "your-tfc-org-name"
  
  # Option 1: Single workspace
  workspace: "landingzone-azure"
  
  # Option 2: All workspaces (wildcard)
  # workspace: "*"
  
  # Option 3: Multiple specific workspaces (creates separate credentials for each)
  # workspaces:
  #   - "landingzone-azure"
  #   - "prod"
  #   - "staging"
  #   - "dev"
  
  # If your workspace is in a project, specify it here
  # Most TFC workspaces are in "Default Project"
  project: "Default Project"

azure:
  # subscription_id: ""  # Optional: leave empty to use current subscription
  # tenant_id: ""        # Optional: auto-detected
  role: "Contributor"    # Default role to assign
  # scope: ""            # Optional: defaults to subscription scope
  
  # Advanced: Multiple role assignments
  # roles:
  #   - name: "Contributor"
  #     scope: ""  # Empty = subscription scope
  #   - name: "User Access Administrator"
  #     scope: "/subscriptions/xxx/resourceGroups/my-rg"

application:
  # name: "terraform-cloud-my-org"  # Optional: auto-generated if not provided
  audience: "api://AzureADTokenExchange"
